{% extends "opensixtContentBundle::layout.html.twig" %}

{% block title %}
    BikiniTranslate UserAdmin
{% endblock %}

{% block body %}

    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <li>
            <a href="{{ path('_user_admin_logout') }}">
                {{ 'logout'|trans }}
            </a>
        </li>
    {% else %}
        <li>
            <a href="{{ path('_user_admin_login') }}">
                {{ 'login'|trans }}
            </a>
        </li>
    {% endif %}
    <br /><br />

    {% if app.user.username %}
        {% set name = app.user.username %}
        <div class="message">{% trans %} hello %name% {% endtrans %}</div>
    {% endif %}
    <br /><br />

    <li>
        <a href="{{ path('_admin_userlist') }}">
            {{ 'user_list'|trans }}
        </a>
    </li>
    <li>
        <a href="{{ path('_admin_grouplist') }}">
            {{ 'groups'|trans }}
        </a>
    </li>




{% endblock %}

