{% extends "opensixtContentBundle::layout.html.twig" %}

{% block title %}
    {{ 'translation_tool'|trans }}
{% endblock %}

{% block body %}

    <h3>{{ 'translation_tool'|trans }}</h3>

    <div class="textblock">{{ 'copylanguage_explanation'|trans }}</div>

    <form action="{{ path('_translate_copylanguage') }}" method="post" {{ form_enctype(form) }}>

        {{ form_label(form.lang_from) }} {{ form_widget(form.lang_from) }}
        {{ form_label(form.lang_to) }} {{ form_widget(form.lang_to) }}
        {{ 'copy_lang_content_text'|trans }} <input type="submit" value="{{ 'submit_page'|trans }}"/>

        {% if translateMade is defined and translateMade == 'done' %}
            <br/>
            <br/>
            <div class="message">
            {% if translationsCount is defined and translationsCount > 0 %}
                {% set count = translationsCount %}
                {% trans %}copy_success %count% {% endtrans %}
            {% else %}
                {{ 'copy_nothing'|trans }}
            {% endif %}
            </div>
        {% endif %}
        {#% if searchResults is defined %}
        <table class="list">
            <thead>
                <tr>
                    <th >{{ 'original_text'|trans }}</th>
                    <th >{{ 'new_text'|trans }}</th>
                </tr>
            </thead>
            <tbody>

            {% for item in searchResults %}
                <tr>
                    <td>{{ item.resource.name }} ({{ item.locale.locale }}):<br/><br/> {{ item.target.target }} </td>
                    <td>{{ form_widget(form['text_' ~ item.id]) }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2">{{ 'no_translation_found'|trans }}</td>
                </tr>
            {% endfor %}
            </tbody>

            {% if paginationbar is defined %}
            <tfoot>
                <tr>
                    <td colspan="2">
                        {% set param = {'target_route': '_translate_changetext', 'paginationbar' : paginationbar } %}
                        {% set param = param|merge({'search': search, 'locale': locale, 'resource': resource}) %}
                        {% include 'opensixtBikiniTranslateBundle:Translate:paginationbar.html.twig' with param %}
                    </td>
                </tr>
            </tfoot>
            {% endif %}
        </table>
        {% endif %#}

        {{ form_rest(form) }}
    </form>


{% endblock %}

{% block sidebar %}
    <ul>
        <li class="backhome"><a href="{{ path('_translate_home') }}">{{ 'admin_home'|trans }}</a></li>
        <br/>
        {% include 'opensixtBikiniTranslateBundle:Translate:translationtool_menu.html.twig' %}
    </ul>
{% endblock %}
