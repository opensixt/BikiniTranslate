{% extends "opensixtContentBundle::layout.html.twig" %}

{% block title %}
    {{ 'translation_tool'|trans }}
{% endblock %}

{% block body %}

    <h3>{{ 'translation_tool'|trans }}</h3>

    <form action="{{ path('_translate_edittext', {'locale':locale, 'page':paginationbar.current}) }}" method="post">
    <table class="list">
        <thead>
            <tr>
                <th>{{ 'source_lang'|trans }}</th>
                {% if not currentLangIsCommonLang %}
                <th>{{ 'english'|trans }}</th>
                {% endif %}
                <th>{{ 'translation'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for item in texts %}
            <tr>
                <td>{{ item.resource.name }}<br/>{{ item.source }}</td>
                {% if not currentLangIsCommonLang %}
                <td>{{ item.commonLang }}</td>
                {% endif %}
                <td><textarea style="width:300px;" name="texts[{{ item.id }}]"></textarea></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">{{ 'no_translation_found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="2">
                    {% include 'opensixtBikiniTranslateBundle:Translate:paginationbar.html.twig' with {'target_route': '_translate_edittext', 'paginationbar' : paginationbar, 'locale': locale } %}
                </td>
            </tr>
        </tfoot>
    </table>

    <input type="submit" value="{{ 'save'|trans }}">

    </form>

{% endblock %}


{% block sidebar %}
    <ul>
        <li class="backhome"><a href="{{ path('_translate_home') }}">{{ 'admin_home'|trans }}</a></li>
        <br/>
        {% include 'opensixtBikiniTranslateBundle:Translate:translationtool_menu.html.twig' %}
    </ul>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
    jQuery(document).ready(function($) {
        // no conflict mode, use $ in here
    });
    </script>
{% endblock %}
