{% extends '::layout.html.twig' %}

{% block flash %}

    {% for type, messages in app.session.getFlashBag.all() %}
        {% for message in messages %}
            <div id="flash_content" class="alert alert-{{ type }} fade in"><button class="close" data-dismiss="alert">&times;</button>{{ message }}</div>
        {% endfor %}
    {% endfor %}

{% endblock %}

{% block javascript_includes %}
<script src="/bundles/opensixtbikinitranslate/js/bikini.js"></script>
{% endblock %}
