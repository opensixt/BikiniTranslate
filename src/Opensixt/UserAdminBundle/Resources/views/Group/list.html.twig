{% extends 'OpensixtBikiniTranslateBundle::base.html.twig' %}

{% block title %}
    {{ 'groups'|trans }}
{% endblock %}

{% block body %}

    <form class="alert alert-info form-inline">
        <a class="btn" href="{{ path('_admin_group_create') }}">{{ 'new_group'|trans }}</a>
    </form>

    <table class="table table-bordered table-striped table-hover table-condensed">
        <thead>
            <tr>
                <th style="width:150px">{{ 'group'|trans }}</th>
                <th style="width:350px">{{ 'description'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for item in pagination %}
            <tr>
                <td><a href="{{ path('_admin_group', {'id': item.id}) }}">{{ item.name }}</a></td>
                <td>{{ item.description }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">{{ 'no_groups_found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
        {% if pagination|length %}
        <tfoot>
            <tr>
                <td colspan="3">
                    {{ pagination.render()|raw }}
                </td>
            </tr>
        </tfoot>
        {% endif %}
    </table>

{% endblock %}