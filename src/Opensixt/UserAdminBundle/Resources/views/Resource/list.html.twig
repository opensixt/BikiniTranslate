{% extends 'OpensixtBikiniTranslateBundle::base.html.twig' %}

{% block title %}
    {{ 'resources'|trans }}
{% endblock %}

{% block body %}

    <h3>{{ 'resources'|trans }}</h3>

    <form class="alert alert-info form-inline">
        <a class="btn" href="{{ path('_admin_resource_create') }}">{{ 'new_resource'|trans }}</a>
    </form>

    <table class="table table-bordered table-striped table-hover table-condensed">
        <thead>
            <tr>
                <th style="width:150px">{{ 'resource'|trans }}</th>
                <th style="width:350px">{{ 'description'|trans }}</th>
                <th>{{ 'visibility'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for item in pagination %}
            <tr>
                <td><a href="{{ path('_admin_resource', {'id': item.id}) }}">{{ item.name }}</a></td>
                <td>{{ item.description }}</td>
                <td><input type="checkbox" disabled="disabled" {% if item.visibility %}checked="checked"{% endif %} /></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">{{ 'no_resources_found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3">
                    {{ pagination.render()|raw }}
                </td>
            </tr>
        </tfoot>
    </table>

{% endblock %}