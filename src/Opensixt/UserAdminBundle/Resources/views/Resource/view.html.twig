{% extends 'OpensixtBikiniTranslateBundle::base.html.twig' %}

{% block title %}
    {{ 'resource'|trans }}
{% endblock %}

{% block body %}

    <form class="form-horizontal alert alert-info" action="{{ path('_admin_resource_save', {'id': resource.getId()}) }}" method="post" {{ form_enctype(form) }}>
        <div>
            {{ form_label(form.name) }}
            {{ form_errors(form.name) }}
            {{ form_widget(form.name) }}
        </div>
        <div>
            {{ form_label(form.description) }}
            {{ form_errors(form.description) }}
            {{ form_widget(form.description) }}
        </div>
        {{ form_rest(form) }}
        <input class="btn" type="submit" value="{{ 'submit'|trans }}"/>
    </form>

{% endblock %}